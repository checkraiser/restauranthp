<th>
</tr>
</thead>
<tbody>
<% @tonghop.each do |t| %>
  <tr>
  <td><%= t.ngay.strftime("%d/%m/%Y") %></td>
  <td><%= t.tiennhap %></td>
  <td><%= t.tienchiphi %></td>
